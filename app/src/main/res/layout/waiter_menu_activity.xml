<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".views.WaiterMenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorBasic"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textFontWeight="900"
            android:textColor="@color/colorWhite"
            android:text="@string/menu"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/poppins" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btnShowWaiterOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="25dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:background="@drawable/ripple_menu"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="92px"
                android:layout_height="92px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/order"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textFontWeight="900"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorBlack"
                    android:text="@string/orderWaiterMenu"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorBlack"
                    android:text="@string/descriptionWaiterOrder"
                    android:fontFamily="@font/open_sans" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/separator" />

        <LinearLayout
            android:id="@+id/btnShowWaiterSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="25dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:background="@drawable/ripple_menu"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="92px"
                android:layout_height="92px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/setting"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textFontWeight="900"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorBlack"
                    android:text="@string/settingWaiterMenu"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorBlack"
                    android:text="@string/descriptionWaiterSetting"
                    android:fontFamily="@font/open_sans" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>